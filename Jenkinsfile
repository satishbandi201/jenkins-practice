pipeline {
    agent {
        label 'agent1'
    }
    stages {
        stage ('Build') {
            steps {
                script{
                    echo 'Building..'
                }
            }
        }
        stage ('Test') {
            steps {
                script{
                    echo 'Testing..'
                }
            }
        }
        stage ('Deploy') {
            steps {
                script{
                    echo 'Deploying..'
                }
            }
        }
    }
     post { 
        always { 
            echo 'I will always say Hello again!'
            deleteDir()
        }
        success { 
            echo 'Hello Success'
        }
        failure { 
            echo 'Hello Failure'
        }
    }
}
